extends layout

block content
  h1 Translate a Word!

  form#myForm(action='/translate', method='POST')
    select#langFrom(name='langFrom')
      option Language from:
      each language in data
        option()= language

    select#langTo(name='langTo')
      option Language to:

    input#myWord(type='text', name='wordToTranslate', placeholder='Enter word to translate')

    input#translateSubmit(type='submit', value='Translate Word')